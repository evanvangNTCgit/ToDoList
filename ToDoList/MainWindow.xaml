<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="ToDo List" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="TaskInput" Width="250" Margin="0,0,10,0" TextChanged="TaskInput_TextChanged" />
            <Button Content="Add" Width="80" Click="AddTask_Click"/>
        </StackPanel>
        <ListBox x:Name="TasksList" Grid.Row="1" Margin="0,0,0,10" SelectionChanged="TasksList_SelectionChanged" />
        <Button Content="Remove Selected" Grid.Row="2" Width="120" HorizontalAlignment="Left" Click="RemoveTask_Click"/>
        <Button x:Name="ReOrderTasks" Content="Reorder TasksList" Grid.Row="2" Width="120" HorizontalAlignment="Right" Click="Button_Click_1"/>
    </Grid>
</Window>